@model ProjetFinalBD.ViewModels.ImageViewModel



@{
    ViewData["Title"] = "VwVueImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vue Image</h1>
<a asp-action="Index">Back to List</a>


<div>
    <div class="col-10">
        <img alt="@Model.Image.Nom" src="@Model.ImageUrl" />

    </div>

    <h4>@Model.Image.Player.FirstName @Model.Image.Player.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Player.AgeExperience)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Player.AgeExperience)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Player.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Player.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Player.Team.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Player.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image.Player.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image.Player.Number)
        </dd>

        @if (Model.Image.Player.Contract != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image.Player.Contract.ContractTerms)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Image.Player.Contract.ContractTerms)
            </dd>
        }
    </dl>
    
    
    
    

</div>